<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ./partials/header %>
  <style>
    .dashboard-header {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .table-container {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <%- include ./partials/navbar %>
  <div class="container">
    <h1 class="dashboard-header">Dashboard</h1>
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% todos.forEach(todo => { %>
            <tr>
              <td><%= todo.title %></td>
              <td><%= todo.completed ? 'Completed' : 'Not Completed' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include ./partials/scripts %>
</body>
</html>
